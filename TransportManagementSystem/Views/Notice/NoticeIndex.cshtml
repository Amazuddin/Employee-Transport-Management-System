@model IEnumerable<TransportManagementSystem.Models.Notification>

@{
    //Layout = null;
}


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <style>
        .col-sz {
            width: 100px;
        }

        .wod {
            width: 150px;
            margin-bottom: 2px;
        }

        .indexdesignbox {
            margin: 30px 30px 30px 30px;
            padding: 30px;
        }

        .newbox {
            margin-bottom: 45px;
            width: 220px;
            font-family: Monoton;
            font-size: 21px;
            color: white;
        }
    </style>


</head>
<body>
    <div class="container">
        <div class=" row">
            <div class="col-md-12" style="margin-top: 30px;">
                <center>
                    <p>
                        @Html.ActionLink("Add New Notice", "Create", null, new { @class = "newbox btn btn-primary" })
                    </p>
                </center>
                <table id="datatable" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Message)
                            </th>

                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.Date)*@
                                @Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary wod" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger wod" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#datatable').DataTable();
        });
    </script>
</body>